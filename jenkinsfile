pipeline {
    agent {
        docker {
            image 'node:8.16.0-alpine'
            args '-p 3000:3000'
        }
    }
    stages {
        stage('Building server application') {
            steps {
                sh 'npm install --verbose --prefix server'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'npm test --prefix server'
            }
        }
        stage('Integration tests Tests') {
            steps {
                sh 'npm run-script it --prefix server'
            }
        }

    }
}
