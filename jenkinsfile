pipeline {
    agent {
        docker {
            image 'node:8-alpine'
            args '-p 3000:3000'
        }
    }
    stages {
        stage('Building server application') {
            steps {
                sh 'cd server'
                sn 'ls'
                sn 'npm install'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'npm test'
            }
        }
        stage('Integration tests Tests') {
            steps {
                sh 'npm run-script it'
            }
        }

    }
}
